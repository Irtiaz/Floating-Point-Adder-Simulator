{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build (Debug) Project",
            "command": "make buildDebug",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        },

        {
            "type": "shell",
            "label": "Build (Release) Project",
            "command": "make buildRelease",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": false,
                "kind": "build"
            }
        }
    ]
}